<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Steven Pears</Authors>
    <Company>Steven Pears</Company>
    <Description>Small library to help make building slack apps easier when you have access to an HttpRequest object</Description>
    <PackageReleaseNotes>Initial release</PackageReleaseNotes>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/stoiveyp/Slack.NetStandard.Endpoint.HttpRequest</RepositoryUrl>
    <PackageProjectUrl>https://github.com/stoiveyp/Slack.NetStandard.Endpoint.HttpRequest</PackageProjectUrl>
    <PackageTags>slack, httprequest</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.2" />
    <PackageReference Include="Slack.NetStandard.Endpoint" Version="1.2.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
